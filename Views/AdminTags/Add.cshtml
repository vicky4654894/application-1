@model _1_Application.Models.ViewModels.AddTagRequest;

@{
    ViewData["Title"] = "Add New Tag";
}
<h1>Add New Tag - Admin Functionality</h1>


<div class="bg-secondary bg-opacity-10 py-2">

    <div class="container">
        <form  method="post">

            <div class="mb-3">
                <label class="form-label">Name</label>
                <input class="form-control" type="text" id="name" asp-for="Name">
            </div>

            <div class="mb-3">
                <label class="form-label">Display Name</label>
                <input class="form-control" type="text" id="displayName" asp-for="DisplayName">
            </div>

            <div class="mb-3">
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        
        </form>
    </div>

</div>


