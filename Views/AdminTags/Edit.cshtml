@model _1_Application.Models.ViewModels.EditTagRequest;

@{
    ViewData["Title"] = "Add New Tag";
}
<h1>Edit Tag - Admin Functionality</h1>


<div class="bg-secondary bg-opacity-10 py-2">

    <div class="container">
        <form  method="post">


        <div class="mb-3">
                <label class="form-label">Id</label>
                <input class="form-control" type="number" id="name" asp-for="Id"  readonly>
            </div>

            <div class="mb-3">
                <label class="form-label">Name</label>
                <input class="form-control" type="text" id="name" asp-for="Name" required>
            </div>

            <div class="mb-3">
                <label class="form-label">Display Name</label>
                <input class="form-control" type="text" id="displayName" asp-for="DisplayName" required>
            </div>

            <div class="mb-3">
                <button type="submit" class="btn btn-primary">Update</button>
                <button type="submit" class="btn btn-danger"
                asp-area="" asp-controller="AdminTags" asp-action="Delete"
                >Delete</button>


            </div>
        
        </form>
    </div>

</div>


